{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "strict": true,
        "alwaysStrict": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*", "test/*"]
        }
    }
}
